{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["../../types/*"]
    },
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
