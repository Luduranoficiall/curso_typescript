{
  "compilerOptions": {
    "types": ["react", "react-dom"],
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["../../types/*"]
    },
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"],
  "files": ["src/react-app-env.d.ts"]
}
